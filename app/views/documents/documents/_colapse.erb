<%= javascript_include_tag "common/base/jquery.js" %>
<script type="text/javascript">
  jQuery(function() {
	jQuery(".colapse").click(function() {

	var id_val = jQuery(this).attr('id');
		if (jQuery('#datain'+id_val).is(':visible')) {
             jQuery('#datain'+id_val).slideUp(500);
	   		jQuery('#div_content'+id_val).next("img").attr("src","/images/document/doc_plus.png");
			jQuery('#div_content'+id_val).html("Expand");
        }
        else {
            jQuery('#datain'+id_val).slideDown(500);
			jQuery('#div_content'+id_val).next("img").attr("src","/images/document/doc_minus.png");
			 jQuery('#div_content'+id_val).html("Collapse");
        }
});

});

 </script>