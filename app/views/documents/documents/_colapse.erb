<%= javascript_include_tag "common/base/jquery.js" %>

<script type="text/javascript">

  $(function() {
	$(".doc_assesment_block1").click(function() {
	var id_val = $(this).attr('id');
		if ($('#datain'+id_val).is(':visible')) {
             $('#datain'+id_val).slideUp(500);
	   		$('#div_image'+id_val).find("img").attr("src","/images/document/left_arrow.gif");
			$('#div_image'+id_val).find("span").html("Colapse");
        }
        else {
            $('#datain'+id_val).slideDown(500);
			$('#div_image'+id_val).find("img").attr("src","/images/document/down_arrow.gif");
			 $('#div_image'+id_val).find("span").html("Expand");
        }
});
});
 </script>