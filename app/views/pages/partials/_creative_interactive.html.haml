#creative_interactive.sign_up{:style => "display:none"}
  %h3#see_id  CREATIVE / INTERACTIVE
  %br.clear
  %div
    = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_artwork_form",:onsubmit => "return creative_interactive_validate();"} do |f|
      = f.hidden_field :page_section,  :value => "creative_interactive_page"

      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Summary:
        = f.text_area :content, :style => "width:600px;",  :id => "creative_interactive_summary", :value => get_languages('creative_interactive_page','summary')


      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  .clear  

  %br.clear
  #tabvanilla.widget
    %ul.tabnav
      %li
        %a.c1{:href => "#mobile_development"} Mobile Development
      %li
        %a{:href => "#ebooks"} Ebooks
      %li
        %a{:href => "#media_presentations"} Multimedia Presentations
      %li
        %a{:href => "#createinterseo"} SEO 


    %br.clear
    #mobile_development.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return crative_interactive_tabs('creative_mobile_development');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_mobile_development"
        %label.headding_label
          %strong  Mobile &nbsp; &nbsp; Development :
          = f.text_area :content, :style => "width:600px;", :id => "creative_mobiledevelopment",:value => get_data('creative_mobile_development')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}

    #ebooks.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return crative_interactive_tabs('creative_ebooks');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_ebooks"
        %label.headding_label
          %strong Ebooks :
          = f.text_area :content, :style => "width:600px;", :id => "creative_ebooks",:value => get_data('creative_ebooks')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / /Outdoor
    #media_presentations.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return crative_interactive_tabs('creative_media_presentations');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_media_presentations"
        %label.headding_label
          %strong Media &nbsp;  Presentations :
          = f.text_area :content, :style => "width:600px;", :id => "media_presentation",:value => get_data('creative_media_presentations')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / Online
    #createinterseo.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_interactive_form"} do |f|
        = f.hidden_field :page_section,  :value => "creative_interactive_seo"
        %label
          %strong{:style=>"font:12px Arial, Helvetica, sans-serif;"} Description:
          = f.text_area :content, :style => "width:600px;",:id => "lang_heading", :value => get_seo('creative_interactive_seo','desc')
        %label
          %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Keywords:
          = f.text_area :news, :style => "width:600px;", :id => "lang_summary", :value => get_seo('creative_interactive_seo','key')
        %p.clearspace  
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}

  .clearspace 

		 
