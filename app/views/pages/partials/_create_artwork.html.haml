#creative_artwork.sign_up{:style => "display:none"}
  %h3#see_id  CREATIVE / ARTWORK
  %br.clear
  %div
    = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_artwork_form",:onsubmit => "return creative_artwork_validate();"} do |f|
      = f.hidden_field :page_section,  :value => "creative_artwork_page"

      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Summary:
        = f.text_area :content, :style => "width:600px;",  :id => "creative_summary_artwork", :value => get_languages('creative_artwork_page','summary')


      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  .clear  

  #tabvanilla.widget
    %ul.tabnav
      %li
        %a{:href => "#createartseo"} SEO  


    #createartseo.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_artwork_form"} do |f|
        = f.hidden_field :page_section,  :value => "creative_artwork_seo"
        %label
          %strong{:style=>"font:12px Arial, Helvetica, sans-serif;"} Description:
          = f.text_area :content, :style => "width:600px;",:id => "lang_heading", :value => get_seo('creative_artwork_seo','desc')
        %label
          %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Keywords:
          = f.text_area :news, :style => "width:600px;", :id => "lang_summary", :value => get_seo('creative_artwork_seo','key')
        %p.clearspace  
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    .clear 
  

  %a#close_x.close.sprited{:href => "#"} close
