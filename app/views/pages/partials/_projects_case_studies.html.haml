#projects_case_studies.sign_up{:style => "display:none"}
  %h3#see_id  Projects / Case Studies - Left Block
  %br.clear
  %div
    = form_for :projects_page, :url => {:controller => "pages",:action => "projects_create"},:html =>{:name => "tech_form",:multipart => :true,:onsubmit => "return case_study_validate();"} do |f|
      = f.hidden_field :page_section,  :value => "project_case_study_page"

      %label
        %strong{:style=>"font:12px/20px Arial, Helvetica, sans-serif;"} Image:
        %input{:type => "file", :name=>"projects_page[image]", :size=>"65", :style=>"font:12px arial; height:25px; width:520px; border:none!important; background:none!important;"}
      %label
        %strong{:style=>"font:12px Arial, Helvetica, sans-serif;"} Title:
        = f.text_field :title, :style => "width:600px;",:id => "casestudy_title", :value => get_projects('project_case_study_page','title')

      %label
        %strong{:style=>"font:12px Arial, Helvetica, sans-serif;"} Caption:
        = f.text_field :news, :style => "width:600px;",:id => "casestudy_caption", :value => get_projects('project_case_study_page','caption')

      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Summary:
        = f.text_area :content, :style => "width:600px;", :id => "casestudy_summary", :value => get_projects('project_case_study_page','summary')

      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  .clear  

  %br.clear
  #tabvanilla.widget
    %ul.tabnav
      %li
        %a.c1{:href => "#challenge_block"} Challenge
      %li
        %a{:href => "#sol_block"} Solution
      %li
        %a{:href => "#benefits_block"} Benefits


    %br.clear
    #challenge_block.tabdiv
      = form_for :projects_page, :url => {:controller => "pages",:action => "projects_create"},:html =>{:name => "langu_translation",:onsubmit => "return project_adv_tabs('cstudies_challenge');"} do |f|
        = f.hidden_field :page_section,  :value => "project_cstudies_challenge"
        %label.headding_label
          %strong Challenge :
          = f.text_area :content, :style => "width:600px;", :id => "project_challenge",:value => get_data('project_cstudies_challenge')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}

    #sol_block.tabdiv
      = form_for :projects_page, :url => {:controller => "pages",:action => "projects_create"},:html =>{:name => "langu_translation",:onsubmit => "return project_adv_tabs('cstudies_solution');"} do |f|
        = f.hidden_field :page_section,  :value => "project_cstudies_solution"
        %label.headding_label
          %strong Solution :
          = f.text_area :content, :style => "width:600px;", :id => "project_solution",:value => get_data('project_cstudies_solution')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}

    #benefits_block.tabdiv
      = form_for :projects_page, :url => {:controller => "pages",:action => "projects_create"},:html =>{:name => "langu_translation",:onsubmit => "return project_adv_tabs('cstudies_benefits');"} do |f|
        = f.hidden_field :page_section,  :value => "project_cstudies_benefits"
        %label.headding_label
          %strong Benefits :
          = f.text_area :content, :style => "width:600px;", :id => "project_benefits",:value => get_data('project_cstudies_benefits')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}


  %a#close_x.close.sprited{:href => "#"} close