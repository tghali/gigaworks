#home_page.sign_up{:style => "display:none"}
  %h3#see_id  HOME
  %br.clear
  #tabvanilla.widget
    %ul.tabnav
      %li
        %a.c1{:href => "#create"} Create
      %li
        %a{:href => "#adapt"} Adapt
      %li
        %a{:href => "#deliver"} Deliver
    #create.tabdiv
      = form_for :frontend_page, :url => {:controller => "pages",:action => "home_create"},:html =>{:name => "forms1",:multipart => :true} do |f|
        = f.hidden_field :tab_type,  :value => "create"
        %label.headding1_label
          %strong Image:
          =# f.file_field :image,{:size => "110", :style=>"font:12px arial; height:20px; width:600px; position: relative;"}
          %input{:type=>"file", :name=>"frontend_page[image]", :size=>"63", :style=>"font:12px arial; height:20px; width:600px; position: relative;" }
        %label.headding_label
          %strong Content:
          = f.text_area :content, :style => "width:600px;", :value => get_data('home_create')
          %textarea#article_new{:cols => "75", :name => "article[description]", :rows => "20", :style => "height:400px;"}
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / /Create
    #adapt.tabdiv
      = form_for :frontend_page, :url => {:controller => "pages",:action => "home_create"},:html =>{:name => "forms1",:multipart => :true} do |f|
        = f.hidden_field :tab_type,  :value => "adapt"
        %label.headding1_label
          %strong Image:
          %input{:type=>"file", :name=>"frontend_page[image]", :size=>"63", :style=>"font:12px arial; height:20px; width:600px; position: relative;" }
        %label.headding_label
          %strong Content:
          = f.text_area :content, :style => "width:600px;", :value => get_data('home_adapt')

        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / /Adapt
    #deliver.tabdiv
      = form_for :frontend_page, :url => {:controller => "pages",:action => "home_create"},:html =>{:name => "forms1",:multipart => :true} do |f|
        = f.hidden_field :tab_type,  :value => "deliver"
        %label.headding1_label
          %strong Image:
          %input{:type=>"file", :name=>"frontend_page[image]", :size=>"63", :style=>"font:12px arial; height:20px; width:600px; position: relative;" }
        %label.headding_label
          %strong Content:
          = f.text_area :content, :style => "width:600px;", :value => get_data('home_deliver')

        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / Deliver
  .clearspace  
  %div
    = form_for :frontend_page, :url => {:controller => "pages",:action => "home_create"},:html =>{:name => "forms1",:multipart => :true} do |f|
      = f.hidden_field :tab_type,  :value => "middle_content"
      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Title:
        = f.text_field :title,  :value => get_title('home_middle')

      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Content:
        = f.text_area :content, :style => "width:600px;",  :value => get_data('home_middle')
      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  .clear  
  .latest_maintab
    = form_for :frontend_page, :url => {:controller => "pages",:action => "home_create"},:html =>{:name => "forms1",:multipart => :true} do |f|
      = f.hidden_field :tab_type,  :value => "news_block"
      .latest_inputblock
        %label
          %strong Latest News
          =# f.text_area :news,  :value => get_news('home_news_block')
      .latest_inputblock
        %label
          %strong Join&nbsp;the&nbsp;network
          = f.text_area :network,  :value => get_network('home_news_block')
      .latest_inputblock
        %label
          %strong Contact us
          = f.text_area :contact_us,  :value => get_contact('home_news_block')
      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  %a#close_x.close.sprited{:href => "#"} close


