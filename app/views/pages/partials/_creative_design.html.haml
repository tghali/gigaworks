#creative_webdesign.sign_up{:style => "display:none"}
  %h3#see_id  CREATIVE / WEB DESIGN
  %br.clear
  %div
    = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_artwork_form",:multipart => :true,:onsubmit => "return creative_design_validate();"} do |f|
      = f.hidden_field :page_section,  :value => "creative_webdesign_page"

      %label
        %strong{:style=>"font:12px Arial, Helvetica, sans-serif;"} Title:
        = f.text_field :title, :style => "width:600px;", :id => "creative_design_heading", :value => get_languages('creative_webdesign_page','title') 

        %label
          %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Image:
          %input{:type=>"file", :name=>"creative_page[image]", :size=>"63", :style=>"font:12px arial; height:20px; width:600px; position: relative;" }

      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Summary:
        = f.text_area :content, :style => "width:600px;",  :id => "creative_design_summary", :value => get_languages('creative_webdesign_page','summary') 


      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  .clear  

  %a#close_x.close.sprited{:href => "#"} close