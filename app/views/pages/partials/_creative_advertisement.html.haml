#creative_adv.sign_up{:style => "display:none"}
  %h3#see_id  CREATIVE / ADVERTISING
  %br.clear
  %div
    = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_artwork_form",:onsubmit => "return creative_adv_validate();"} do |f|
      = f.hidden_field :page_section,  :value => "creative_adv_page"

      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Summary:
        = f.text_area :content, :style => "width:600px;",  :id => "creative_advertising", :value => get_languages('creative_adv_page','summary')


      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  .clear  

  %br.clear
  #tabvanilla.widget
    %ul.tabnav
      %li
        %a.c1{:href => "#press_adv"} Press Advertising
      %li
        %a{:href => "#outdoor_adv"} Outdoor Advertising
      %li
        %a{:href => "#online_adv"} Online Advertising
      %li
        %a{:href => "#exhibition"} Exhibition and Events
      %li
        %a{:href => "#createadseo"} SEO

    %br.clear
    #press_adv.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return creative_adv_tabs('press_adv');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_press_adv"
        %label.headding_label
          %strong Press &nbsp; &nbsp; &nbsp; Advertising :
          = f.text_area :content, :style => "width:600px;", :id => "press_advertisement",:value => get_data('creative_press_adv')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}

    #outdoor_adv.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return creative_adv_tabs('outdoor_adv');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_outdoor_adv"
        %label.headding_label
          %strong Outdoor Advertising :
          = f.text_area :content, :style => "width:600px;", :id => "outdoor_advertisement",:value => get_data('creative_outdoor_adv')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / /Outdoor
    #online_adv.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return creative_adv_tabs('online_adv');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_online_adv"
        %label.headding_label
          %strong Online &nbsp; Advertising :
          = f.text_area :content, :style => "width:600px;", :id => "online_advertisement",:value => get_data('creative_online_adv')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / Online
    #exhibition.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return creative_adv_tabs('exhibition');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_adv_exhibition"
        %label.headding_label
          %strong Exhibition & Events :
          = f.text_area :content, :style => "width:600px;", :id => "exhibition_advertisement",:value => get_data('creative_adv_exhibition')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / Deliver

    #createadseo.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_artwork_form"} do |f|
        = f.hidden_field :page_section,  :value => "creative_advert_seo"
        %label
          %strong{:style=>"font:12px Arial, Helvetica, sans-serif;"} Description:
          = f.text_area :content, :style => "width:600px;",:id => "lang_heading", :value => get_seo('creative_advert_seo','desc')
        %label
          %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Keywords:
          = f.text_area :news, :style => "width:600px;", :id => "lang_summary", :value => get_seo('creative_advert_seo','key')
        %p.clearspace  
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    .clear

  .clearspace
		 
  %a#close_x.close.sprited{:href => "#"} close
