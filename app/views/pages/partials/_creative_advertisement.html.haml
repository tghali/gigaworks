#creative_adv.sign_up{:style => "display:none"}
  %h3#see_id  CREATIVE / ADVERTISING
  %br.clear
  %div
    = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "creative_artwork_form",:onsubmit => "return creative_artwork_validate();"} do |f|
      = f.hidden_field :page_section,  :value => "creative_adv_page"

      %label
        %strong{:style=>"font:14px Arial, Helvetica, sans-serif;"} Summary:
        = f.text_area :content, :style => "width:600px;",  :id => "summary_artwork", :value => get_languages('creative_adv_page','summary')


      %p.clearspace  
      %p.send_btn1
        %input{:type=>"Submit" , :value=> "Submit"}
  .clear  

  %br.clear
  #tabvanilla.widget
    %ul.tabnav
      %li
        %a.c1{:href => "#press_adv"} Press Advertising
      %li
        %a{:href => "#outdoor_adv"} Outdoor Advertising
      %li
        %a{:href => "#online_adv"} Online Advertising
      %li
        %a{:href => "#exhibition"} Exhibition and Events

    %br.clear
    #press_adv.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return language_translation('lang_trans_technical');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_press_adv"
        %label.headding_label
          %strong Press &nbsp; &nbsp; &nbsp; Advertising :
          = f.text_area :content, :style => "width:600px;", :id => "press_adv",:value => get_data('creative_press_adv')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}

    #outdoor_adv.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return language_translation('lang_trans_medical');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_outdoor_adv"
        %label.headding_label
          %strong Outdoor Advertising :
          = f.text_area :content, :style => "width:600px;", :id => "outdoor_adv",:value => get_data('creative_outdoor_adv')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / /Outdoor
    #online_adv.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return language_translation('lang_trans_marketing');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_online_adv"
        %label.headding_label
          %strong Online &nbsp; Advertising :
          = f.text_area :content, :style => "width:600px;", :id => "online_adv",:value => get_data('creative_online_adv')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / Online
    #exhibition.tabdiv
      = form_for :creative_page, :url => {:controller => "pages",:action => "creative_create"},:html =>{:name => "langu_translation",:onsubmit => "return language_translation('lang_trans_literary');"} do |f|
        = f.hidden_field :page_section,  :value => "creative_adv_exhibition"
        %label.headding_label
          %strong Exhibition & Events :
          = f.text_area :content, :style => "width:600px;", :id => "create_content",:value => get_data('creative_adv_exhibition')
        %p.send_btn1
          %input{:type=>"Submit" , :value=> "Submit"}
    / Deliver

  .clearspace 
		 
  %a#close_x.close.sprited{:href => "#"} close