              = render 'shared/account'
        #mid{:class => @room}
          #parent
            = yield :parent # TODO or present a standard set of options
          #main
            - unless flash.empty?
              #flashes
                - flash.each do |type, msg|
                  %div{:class=>"#{type}"}= h msg
              -flash.clear
            =  content_for?(:main) ? yield(:main) : yield
