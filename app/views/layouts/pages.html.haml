%html
  %head
    %title== #{yield :title}Gigavine
    
    %meta{:"http-equiv" => "Content-Type", :content => "text/html;charset=utf-8" }/
    -# %meta{:name => "description", :content => "Gigavine" }
        
    = stylesheet_link_tag 'pages_screen.css', :media => 'screen, projection'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag 'common.js'
    = javascript_include_tag "http://use.typekit.com/oul4lnj.js"
    %script{:type => "text/javascript"} try{Typekit.load();}catch(e){}
    = csrf_meta_tag
  %body
    #wrapper
      #container
        %div#header
          #locale-selection
            %span== #{t(:'site.locale_current')}:
            %span#locale-current English
            %a#locale-change{:href => '#'}== #{t(:'site.locale_change')}
          #header-left
            %h1#logo Gigavine
          #header-right
            %div#header-tools
              = form_tag site_search_path, :method => 'get' do
                %p
                  = label_tag :search, t(:'site.search')
                  = text_field_tag :search, params[:q]
                %p= submit_tag t(:'site.Go'), :name => nil
            #navigation
              %ul
                %li#nav-company
                  = link_to t(:'site.Company'), :section => 'company'
                  %span &bull;
                %li#nav-creative
                  = link_to t(:'site.Creative'), :section => 'creative'
                  %span &bull;
                %li#nav-languages
                  = link_to t(:'site.Languages'), :section => 'languages'
                  %span &bull;
                %li#nav-technology
                  = link_to t(:'site.Technology'), :section => 'technology'
                  %span &bull;
                %li#nav-contact
                  = link_to t(:'site.Contact_us'),    :section => 'company', :page => 'contact_us'
                  %span &bull;
        -if params[:section] && params[:section] != 'contact_us'
          #section-mast
            = render :partial => params[:section]
        #content
          =yield
        %div#footer
          #footer-letterpress
            %h4 Gigavine.com
          .footer-map-section
            %h5= link_to t(:'site.Company'), :section => 'company'
            %ul
              %li= link_to t(:'site.About_us'),      :section => 'company', :page => 'about_us'
              %li= link_to t(:'site.Case_studies'),  :section => 'company', :page => 'case_studies'
              %li= link_to t(:'site.Join_our_team'), :section => 'company', :page => 'join_our_team'
              %li= link_to t(:'site.Contact_us'),    :section => 'company', :page => 'contact_us'
          .footer-map-section
            %h5= link_to t(:'site.Creative'), :section => 'creative'
            %ul
              %li= link_to t(:'site.Design_and_Artwork'), :section => 'creative', :page => 'design_and_artwork'
              %li= link_to t(:'site.Web_design'),         :section => 'creative', :page => 'web_design'
              %li= link_to t(:'site.Copywriting'),        :section => 'creative', :page => 'copywriting'
              %li= link_to t(:'site.Interactive'),        :section => 'creative', :page => 'interactive'            
          .footer-map-section
            %h5= link_to t(:'site.Languages'), :section => 'languages'
            %ul
              %li= link_to t(:'site.Translation'),  :section => 'languages', :page => 'translation'
              %li= link_to t(:'site.Localization'), :section => 'languages', :page => 'localization'
              %li= link_to t(:'site.Consltancy'),   :section => 'languages', :page => 'consultancy'
              %li= link_to t(:'site.Online_tools'), :section => 'languages', :page => 'online_tools'
          .footer-map-section
            %h5= link_to t(:'site.Technology'), :section => 'technology'
            %ul
              %li= link_to t(:'site.E-Learning'),   :section => 'technology', :page => 'e-learning'
              %li= link_to t(:'site.E-Commerce'),   :section => 'technology', :page => 'e-commerce'
              %li= link_to t(:'site.Web_security'), :section => 'technology', :page => 'web_security'
              %li= link_to t(:'site.CRM'),          :section => 'technology', :page => 'crm'
          #footer-right
            %div
              %ul
                %li
                  = link_to t(:'site.Blog'), blog_posts_path
                  %span &bull;
                %li
                  = link_to t(:'site.Terms'),   :section => 'legal', :page => 'terms'
                  %span &bull;
                %li
                  = link_to t(:'site.Privacy'), :section => 'legal', :page => 'privacy'
            #footer-details
              %p
                Copyright Â© 2011 Gigavine limited
                %br/
                Registered in England & Wales No 6748143
      #locale-options
        %ul
          - locale_links.each do |link|
            %li= link.html_safe
      