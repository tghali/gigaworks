#contact_wrapper
  .contact-newbg{:style=>"background:none"}
    #trans-wrapper
      #trans-main
        = render :partial => "/pages/partials/inner_pages"
        
        .contact_headding{:style=>"background:none"}
          %h4
            %span CLIENT /
            REGISTRATION
      / <div class="pro-case-header">&nbsp;</div>
    #lp_content{:style => "position:relative;background:#fff;"}
      #lp_midcontent
        .signup.baselayout
          .container
            .clear  
            .leftcolumn
              .banner{:style=>"background:none"}
                %h2 Form to create an account
              .contents{:style=>"background:none"}
                %form
                  .account.section
                    %h3.step.one Create your Sample account
                    %table
                      %tbody
                        %tr
                          %td{:width => "80px"}
                            %label{:for => "signup_first_name"} First name
                          %td
                            %input{:type => "text"}/
                          %td

                        %tr
                          %td
                            %label{:for => "signup_last_name"} Last name
                          %td
                            %input{:type => "text"}/
                          %td

                        %tr
                          %td
                            %label{:for => "signup_email_address"} Email
                          %td
                            %input{:type => "text"}/
                        %tr
                          %td
                            %label{:for => "signup_company_name"} Company
                          %td
                            %input{:type => "text"}/
                        %tr
                          %td
                            %label{:for => "signup_company_name"} Industry
                          %td
                            %input{:type => "text"}/
                        %tr
                          %td
                            %label{:for => "signup_company_name"} Turn Over
                          %td
                            %input{:type => "text"}/
                    %fieldset.credentials
                      %legend Now choose a username & password
                      #username_entry
                        %p.field
                          %label{:for => "signup_username"} Username/Login
                          %br
                            %input{:type => "text"}/
 
                            #login

                        %p.field
                          %label{:for => "signup_password"} Password
                          %br
                            %input{:type => "text"}/
                            %br
                              6 characters or longer with at least one number is safest.
                        %p.field
                          %label{:for => "signup_password_confirmation"} Enter your password again for verification
                          %br
                            %input{:type => "text"}/
                        %p
                  .billing.section
                    .billing
                      %h3.step.three Enter your billing information
                      .tip_container
                      #credit_card_form
                        %table
                          %tbody
                            %tr
                              %td
                                %label{:for => "card_number"} Card Number
                              %td
                                %input{:type => "text"}/
                              %td
                                / <haml:loud> error_message_on :user, :card_number , :prepend_text =&gt; &quot;Card Number &quot;, :css_class =&gt; &quot;error&quot;</haml:loud>
                            %tr
                              %td
                                %label{:for => "card_expires_on_month"} Expires on
                              %td
                                %input{:type => "text"}/
                              %td

                            %tr
                              %td
                                %label{:for => "verification_value"} Verification Number
                              %td
                                %input{:type => "text"}/
                              %td 
                            %tr
                              %td
                                %label{:for => "type"} Card Type
                              %td
                                %input{:type => "text"}/
                              %td

                            %tr
                              %td
                                %label{:for => "card_zip_code"} Billing ZIP
                              %td
                                %input{:type => "text"}/
                              %td

                            %tr
                              %td  
                              %td{:colspan => "2", :valign => "top"} (or Postal Code if not in the USA)
                  .clear
                  %img{:src=>"/images/frontend/client_signup/btn-createaccount.png",:alt => "Create my account", :style => "background:none; width:auto;"}
                  -#%input{:alt => "Create my account", :src => "/images/frontend/client_signup/btn-createaccount.png", :style => "background:none; width:auto;", :type => "image"}
              .bottom
          .clear.both