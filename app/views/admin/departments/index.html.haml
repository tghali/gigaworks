
- content_for :parent do

  %br


- content_for :main do

  %h3{:style => "padding-top:20px;"} Departments Management
  = link_to "Create Department",new_admin_department_path, :rel => "#new_group", :id => "create_group", :'class' => 'overlay-switch',:remote => :true, :style=>"color:#636d12; font-size:13px; font-weight:bold;"  
  
  
  - if !@departments.blank?
    #datain1.left_middle{:style => "display:block;"}
      .grouptable_structure
        %ul
          %li.name{:style=>"margin-left:20px; color: #4d4d4d; font-size:13px; font-weight:bold;"}
            %a{:href => "#"} Name
          %li.date1{:style=>"width: 215px; color: #4d4d4d; font-size:13px; font-weight:bold;"}
            %a{:href => "#"} Description
          %li.name{:style=>"width: 175px; color: #4d4d4d; font-size:13px; font-weight:bold;"}
            %a{:href => "#"} Department&nbsp;ID
      - @departments.each_with_index do |department,j| 
        %div{:class => cycle("grouptable_structure_inner", "grouptable_structure_inner_color")}
          %ul
                        
            %li.name1
             
              = department.name
            %li.date1{:style => "padding-left: 20px;"}
              = department.description
            %li.name
              = department.department_id
            %li.view{:style=>"margin-top: -22px; position: relative; left: 475px;"}
              %span>/
              = link_to "Edit",edit_admin_department_path(department), :rel => "#new_group", :id => "group_edit", :'class' => 'overlay-switch',:remote => :true
              |
              %span>/
              = link_to "Delete", admin_department_path(department), :confirm => 'Are you sure want to delete department? ', :method => :delete,:title => "Click here to delete department"
              |		    
              %span>/
              = "Users"
              |		    
              %span>/
              = "Permissions"

              %div{:class => "clear"}
 
  -else
    = "No Department has been created yet. Please add a department by clicking on the link"


  #new_group.simple_overlay
    #group


