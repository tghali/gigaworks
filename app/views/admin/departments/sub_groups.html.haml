

- content_for :main do

  %h3{:style => "padding-top:20px;"} #{@group.name} > SubGroups
  = link_to "Create subgroup",new_admin_group_path, :rel => "#new_group", :id => "create_group", :'class' => 'overlay-switch',:remote => :true
  - if !@sub_groups.blank?
    #datain1.left_middle{:style => "display:block;"}
      .grouptable_structure
        %ul
          %li.name{:style=>"margin-left:20px;"}
            %a{:href => "#"} Name
          %li.name
            %a{:href => "#"} Description
      - @sub_groups.each_with_index do |group,j| 
        %div{:class => cycle("grouptable_structure_inner", "grouptable_structure_inner_color")}
          %ul
                        
            %li.name1
             
              = group.name
            %li.date1
              = group.description
            %li.view
              %span>/
              = link_to "Edit",edit_admin_group_path(group), :rel => "#new_group", :id => "group_edit", :'class' => 'overlay-switch',:remote => :true
              |
              %span>/
              = link_to "Delete", admin_group_path(group), :confirm => 'Are you sure want to delete group with subgroups? ', :method => :delete,:title => "Click here to delete group"
              |
              %span>/
              = "Users"
              |		    
              %span>/
              = "Subgroups"
              |		    
              %span>/
              = "Roles"

              %div{:class => "clear"}
 
  -else
    = link_to "Create subgroup",new_admin_group_path, :rel => "#new_group", :id => "create_group", :'class' => 'overlay-switch',:remote => :true
    = "No Groups has been created yet. Please add a group by clicking on the link"


  #new_group.simple_overlay
    #group


