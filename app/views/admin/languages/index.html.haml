
- content_for :parent do

  %br


- content_for :main do

  %h3{:style => "padding-top:20px;"} Languages Management
  = link_to "Create Language",new_admin_language_path, :rel => "#new_group", :id => "create_group", :'class' => 'overlay-switch',:remote => :true, :style=>"color:#636d12; font-size:13px; font-weight:bold;"  
  
  
  - if !@languages.blank?
    #datain1.left_middle{:style => "display:block;"}
      .grouptable_structure
        %ul
          %li.name{:style=>"margin-left:20px; color: #4d4d4d; font-size:13px; font-weight:bold;"}
            %a{:href => "#"} Accronym
          %li.date1{:style=>"width: 215px; color: #4d4d4d; font-size:13px; font-weight:bold;"}
            %a{:href => "#"} Name

      - @languages.each_with_index do |lang,j| 
        %div{:class => cycle("grouptable_structure_inner", "grouptable_structure_inner_color")}
          %ul
                        
            %li.name1
             
              = lang.acronym
            %li.date1{:style => "padding-left: 20px;"}
              = lang.name
            -#%li.name
              =# department.department_id
            %li.view{:style=>"margin-top: -22px; position: relative; left: 475px;"}
              %span>/
              = link_to "Edit",edit_admin_language_path(lang), :rel => "#new_group", :id => "group_edit", :'class' => 'overlay-switch',:remote => :true
              |
              %span>/
              = link_to "Delete", admin_language_path(lang), :confirm => 'Are you sure want to delete language? ', :method => :delete,:title => "Click here to delete language"


              %div{:class => "clear"}
 
  -else
    = "No Language has been created yet. Please add a language by clicking on the link"


  #new_group.simple_overlay
    #group


