%h2 Create Language
%div{:style=>"height:350px; overflow-y:scroll; overflow-x:hidden;"}
  .box.sentence
    = form_for @language, :url => {:action => :create} do |d|
      = render "shared/error_messages", :target => @language  
      = d.text_field :acronym
      = d.text_field :name

 
      %div{:style => "width:150px; float:left;"}  
        = d.submit "create language"
