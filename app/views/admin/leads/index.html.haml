
%script{:type => "text/javascript"}
  function checkAll(cb)
  {

  var val = cb.checked;
  var frm = document.delete;
  var len = frm.elements.length;
  var i=0;
  for( i=0 ; i<len ; i++) 
  {
  frm.elements[i].checked=val;
  }

  }
   
