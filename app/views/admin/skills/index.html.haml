
- content_for :parent do

  %br


- content_for :main do

  %h3{:style => "padding-top:20px;"} Skills Management
  = link_to "Create Skill",new_admin_skill_path, :rel => "#new_group", :id => "create_group", :'class' => 'overlay-switch',:remote => :true, :style=>"color:#636d12; font-size:13px; font-weight:bold;"  
  
  
  - if !@skills.blank?
    #datain1.left_middle{:style => "display:block;"}
      .grouptable_structure
        %ul
          %li.name{:style=>"margin-left:20px; width: 30%;color: #4d4d4d; font-size:13px; font-weight:bold;"}
            %a{:href => "#"} Title	
          %li.date1{:style=>"width: 215px; color: #4d4d4d; font-size:13px; font-weight:bold;"}
            %a{:href => "#"} Name

      - @skills.each_with_index do |skill,j| 
        %div{:class => cycle("grouptable_structure_inner", "grouptable_structure_inner_color")}
          %ul
                        
            %li.name1{:style => "width: 30%;"}
             
              = skill.title
            %li.date1{:style => "padding-left: 20px;"}
              = skill.name

            %li.view{:style=>"margin-top: -22px; position: relative; left: 475px;"}
              %span>/
              = link_to "Edit",edit_admin_skill_path(skill), :rel => "#new_group", :id => "group_edit", :'class' => 'overlay-switch',:remote => :true
              |
              %span>/
              = link_to "Delete", admin_skill_path(skill), :confirm => 'Are you sure want to delete skill? ', :method => :delete,:title => "Click here to delete skill"


              %div{:class => "clear"}
 
  -else
    = "No Skill has been created yet. Please add a skill by clicking on the link"


  #new_group.simple_overlay
    #group


