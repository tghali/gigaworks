- form_for @sentence, :url => create_sentence_path ,:remote => "true" do |s|  
        
  #pop_login_wrapper
    .head_login
      %span Add New Term
      %a.close.close_form{:href => "#"}
    #pop_loging_form.fl_left
      .inner_login_wrap
        / First Name
        .form_block_two.fl_left
          %label.fl_left.text_indent Email
          %br.clear_all/
          %label.fl_left.input_width_12
            %input{:title => "First Name", :type => "text"}/
          .clear_all
          .error_msg dd
        .form_block_two.fl_left.mag_non
          %label.fl_left.text_indent Arabic
          %br.clear_all/
          %label.fl_left.input_width_12.textarea_width_12
            %textarea
          .clear_all
          .error_msg dd
        .form_block_two.fl_left.mag_non
          %label.fl_left.text_indent Comment
          %br.clear_all/
          %label.fl_left.input_width_12.textarea_width_12
            %textarea
          .clear_all
          .error_msg dd
        .form_block_two.fl_left.mag_non
          %label.fl_left.text_indent Description
          %br.clear_all/
          %label.fl_left.input_width_12.textarea_width_12
            %textarea
          .clear_all
          .error_msg dd
        .clear_all
        .form_block_two.fl_left.mag_non
          %label.fl_left.input_width_12{:style => "background:none"}
            %input.sign_submit.create_submit{:type => "submit", :value => "Create Term"}/
      .clear_all
      / Lead form end
      
:javascript

      //if close button is clicked
      $('.window .close').click(function (e) {
          //Cancel the link behavior
          e.preventDefault();
  
          $('#mask').fadeOut(200);
          $('.window').fadeOut(200);
      });     
