.box.sentence
  %h2 Add new Sentence
  = form_for @sentence, :url => glossary_sentences_path do |w|
    = render "shared/error_messages", :target => @sentence
    = w.select :language, Gigavine::Preferences.translated_languages
    = w.text_area :text
    %h3 Provide a translation
    #translations
      = w.fields_for :translations do |d|
        = d.select :language, Gigavine::Preferences.translated_languages
        = d.text_area :text
      = w.submit