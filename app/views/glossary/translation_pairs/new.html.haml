.box.sentence
  %h2 Add new Translation to:
  %p
    = language_flag_for(@sentence)
    = @sentence.text
  %p
    = link_to 'View original', glossary_sentence_path(@sentence)
  = form_for @translation, 'translation', :url => glossary_sentence_translation_pairs_path(@sentence) do |t|
    = render "shared/error_messages", :target => @translation
    = t.select :language, Gigavine::Preferences.translated_languages, :class => 'language_toggle', :rel => t.field_id_for(:text)
    = t.text_area :text
    = t.submit